{% extends "template.njk" %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ name }}</h1>
  <div class="govuk-body">
    <p>{{ notInPersonP1 }}</p>
    <h2 class="govuk-heading-m">Addresses</h2>
    <ul class="govuk-list govuk-list--bullet">
      {% for address in addresses %}
        <li>{{ address }}</li>
      {% endfor %}
    </ul>
    {% if info %}
      <h3 class="govuk-heading-m">Additional information</h3>
      <p>{{ info | safe }}</p>
    {% endif %}
  </div>
{% endblock %}
