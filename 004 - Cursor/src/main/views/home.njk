{% extends "template.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% block pageTitle %}
  Find a court or tribunal - GOV.UK
{% endblock %}

{% block content %}
<div class="govuk-width-container">
  <main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Find a court or tribunal</h1>
        
        <p class="govuk-body-l">Find contact details for a court or tribunal in England or Wales, including:</p>
        
        <ul class="govuk-list govuk-list--bullet">
          <li>addresses</li>
          <li>phone numbers</li>
          <li>email addresses</li>
          <li>directions for when you visit</li>
        </ul>

        <div class="govuk-inset-text">
          <p>This service does not provide information about cases or case outcomes.</p>
        </div>

        {{ govukButton({
          text: "Start now",
          href: "/search-option",
          isStartButton: true
        }) }}
      </div>

      <div class="govuk-grid-column-one-third">
        <aside class="govuk-related-items" role="complementary">
          <h2 class="govuk-heading-m">Related services</h2>
          <ul class="govuk-list">
            <li>
              <a class="govuk-link" href="#">Courts and tribunals tracker</a>
            </li>
            <li>
              <a class="govuk-link" href="#">Court and tribunal hearings</a>
            </li>
            <li>
              <a class="govuk-link" href="#">Online court and tribunal service</a>
            </li>
          </ul>
        </aside>
      </div>
    </div>
  </main>
</div>
{% endblock %}
